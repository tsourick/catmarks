{
  "manifest_version": 2,
  "name": "catmarks",
  "version": "0.1",

  "description": "Categorized bookmarks, quick bookmarks",

  "icons": {
    "48": "icons/plugin-48.png"
  },

  "___content_scripts": [
    {
      "matches": [
      	"<all_urls>"
      ],
      "js": [
      	"ffplugin.js"
      ]
    }
  ],

	"__content_scripts": [
		{
			"matches": [
      	"*://*.mozilla.org/*",
				"<all_urls>"
			],
			"js": [
				"tidy_content.js"
			]
		}
	],

	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},
	
	"background": {
		"scripts": ["background/background.js"],
		"persistent": true
	},
	
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage",
    "<all_urls>"
  ],
  
  "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "ffplugin@romantsourick.pro"
    }
  }
}
